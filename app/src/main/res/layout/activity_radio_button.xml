<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                tools:context=".view.RadioButtonActivity">

    <RadioGroup android:id="@+id/rg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <!--男-->
        <RadioButton android:id="@+id/rb_1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:text="@string/rb_man"
                     android:textSize="18sp"/>
        <!--女-->
        <RadioButton android:id="@+id/rb_2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/rb_woman"
                     android:textSize="18sp"/>
    </RadioGroup>

    <RadioGroup android:id="@+id/rg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_below="@id/rg_1">
        <!--男-->
        <RadioButton android:id="@+id/rb_3"
                     android:layout_width="60dp"
                     android:layout_height="wrap_content"
                     android:checked="true"
                     android:background="@drawable/bg_rg"
                     android:button="@null"
                     android:gravity="center"
                     android:text="@string/rb_man"
                     android:textSize="18sp"
                     android:textColor="#fff"/>
        <!--女-->
        <RadioButton android:id="@+id/rb_4"
                     android:layout_width="60dp"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="10dp"
                     android:background="@drawable/bg_rg"
                     android:button="@null"
                     android:gravity="center"
                     android:text="@string/rb_woman"
                     android:textSize="18sp"
                     android:textColor="#fff"/>
    </RadioGroup>

</RelativeLayout>
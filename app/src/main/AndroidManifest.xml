<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tec.anji">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:appComponentFactory=""
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:appComponentFactory">
        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".layout.LinearLayoutActivity"/>
        <activity android:name=".layout.RelativeLayoutActivity"/>
        <activity android:name=".view.TextViewActivity"/>
        <activity android:name=".view.ButtonActivity"/>
        <activity android:name=".view.EditTextActivity"/>
        <activity android:name=".view.RadioButtonActivity"/>
        <activity android:name=".view.CheckBoxActivity"/>
        <activity android:name=".view.ImageViewActivity"/>
        <activity android:name=".view.list.ListViewActivity"/>
        <activity android:name=".view.grid.GridViewActivity"/>
        <activity android:name=".view.recycler.VerticalRecyclerViewActivity"/>
        <activity android:name=".view.recycler.HorizontalRecyclerViewActivity"/>
        <activity android:name=".view.recycler.GridRecyclerViewActivity"/>
        <activity android:name=".view.recycler.StaggeredRecyclerViewActivity"/>
        <activity android:name=".view.WebViewActivity"/>
        <activity android:name=".view.ToastActivity"/>
        <activity android:name=".view.DialogActivity"/>
        <activity android:name=".fragment.FragmentActivity">
        </activity>
    </application>

</manifest>